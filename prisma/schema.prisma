generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Garment {
  id          String    @id @default(cuid())
  name        String
  category    String
  imageUrl    String
  active      Boolean   @default(true)
  createdAt   DateTime  @default(now())
}

// New model for user photo uploads
model Upload {
  id        String   @id @default(cuid())
  url       String
  fileName  String
  type      String   // will be "USER_PHOTO" or "GARMENT"
  createdAt DateTime @default(now())
}crm -rf app
